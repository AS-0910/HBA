{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Hyperbus Adaptor - API",
        "description": "Hyperbus Adaptor - API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:5000",
    "basePath": "/",
    "tags": [
        {
            "name": "Login",
            "description": "API for authentication"
        },
        {
            "name": "Excel",
            "description": "API for all excel related functionalities"
        },
        {
            "name": "Request",
            "description": "API for all verification related functionalities"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Login"
                ],
                "description": "API to authenticate user",
                "parameters": [
                    {
                        "name": "User Credentials",
                        "in": "body",
                        "description": "Login Credentials that the user enters",
                        "schema": {
                            "$ref": "#/definitions/UserCredentials"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User is logged in",
                        "schema": {
                            "$ref": "#/definitions/successResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized Access",
                        "schema": {
                            "$ref": "#/definitions/errorResponse"
                        }
                    }
                }
            }
        },
        "/request/verify": {
            "post": {
                "tags": [
                    "Request"
                ],
                "description": "API to verify subject requests'",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Requests",
                        "in": "body",
                        "description": "List of subject requests",
                        "schema": {
                            "$ref": "#/definitions/subjectRequestList"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/verifySuccessResponse"
                        }
                    }
                }
            }
        },
        "/request/getAllRequests": {
            "post": {
                "tags": [
                    "Request"
                ],
                "description": "API to get all requests",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Req Body",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/requestBody"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/requestResponseList"
                        }
                    }
                }
            }
        },
        "/request/getRequestDetail": {
            "get": {
                "tags": [
                    "Request"
                ],
                "description": "API to get request detail for given requestID",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "reqId",
                        "in": "query",
                        "description": "requestID",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "properties": {
                                "status": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "message": {
                                    "type": "string"
                                },
                                "data": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "key": {
                                                        "type": "string"
                                                    },
                                                    "value": {
                                                        "type": "string"
                                                    },
                                                    "checked": {
                                                        "type": "integer",
                                                        "example": 1
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/request/getRequestCounts": {
            "get": {
                "tags": [
                    "Request"
                ],
                "description": "API to get request counts",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "properties": {
                                "status": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "message": {
                                    "type": "string"
                                },
                                "data": {
                                    "properties": {
                                        "avgReqPerDay": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "avgReqPerWeek": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReq": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReqWithSubjectFound": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReqWithMismatch": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "avgReqPerDayvsLastWeek": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "avgReqPerWeekvsLastWeek": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReqvsLastWeek": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReqWithSubjectFoundvsLastWeek": {
                                            "type": "string",
                                            "example": "115"
                                        },
                                        "totalReqWithMismatchvsLastWeek": {
                                            "type": "string",
                                            "example": "115"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/excel/getUploadedFiles": {
            "get": {
                "tags": [
                    "Excel"
                ],
                "description": "API to get all Uploaded Files",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "properties": {
                                "status": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "message": {
                                    "type": "string"
                                },
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "fileName": {
                                                "type": "string"
                                            },
                                            "createdAt": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/excel/upload": {
            "post": {
                "tags": [
                    "Excel"
                ],
                "description": "API to upload a file",
                "consumes": "multipart/form-data",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "type": "file",
                        "description": "The file to Upload"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "properties": {
                                "status": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "message": {
                                    "type": "string"
                                },
                                "data": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/excel/download": {
            "get": {
                "tags": [
                    "Excel"
                ],
                "description": "API to download a file",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "fileName",
                        "in": "query",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "file"
                        }
                    },
                    "400": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "UserCredentials": {
            "required": [
                "username",
                "password"
            ],
            "properties": {
                "username": {
                    "type": "string",
                    "example": "hyperbus"
                },
                "password": {
                    "type": "string",
                    "example": "123456"
                }
            }
        },
        "successResponse": {
            "properties": {
                "status": {
                    "type": "number",
                    "example": 1
                },
                "message": {
                    "type": "string"
                },
                "data": {
                    "properties": {
                        "token": {
                            "type": "string"
                        },
                        "status": {
                            "type": "integer",
                            "example": 200
                        }
                    }
                }
            }
        },
        "errorResponse": {
            "properties": {
                "status": {
                    "type": "integer",
                    "example": 0
                },
                "message": {
                    "type": "string"
                },
                "error": {
                    "properties": {
                        "message": {
                            "type": "string"
                        },
                        "status": {
                            "type": "integer",
                            "example": 401
                        }
                    }
                }
            }
        },
        "subjectRequest": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "required": true
                },
                "lastName": {
                    "type": "string",
                    "required": true
                },
                "issuingAuthority": {
                    "type": "string",
                    "required": true
                },
                "document": {
                    "type": "string",
                    "required": true
                },
                "department": {
                    "type": "string",
                    "required": true
                },
                "startDate": {
                    "type": "string",
                    "required": true
                },
                "endDate": {
                    "type": "string",
                    "required": true
                }
            }
        },
        "subjectRequestList": {
            "type": "array",
            "items": {
                "type": "object",
                "$ref": "#/definitions/subjectRequest"
            }
        },
        "verifySubject": {
            "type": "object",
            "properties": {
                "requestID": {
                    "type": "string"
                },
                "veriflowID": {
                    "type": "string"
                },
                "subjectName": {
                    "type": "string"
                },
                "issuingAuthority": {
                    "type": "string"
                },
                "document": {
                    "type": "string"
                },
                "department": {
                    "type": "string"
                },
                "startDate": {
                    "type": "string"
                },
                "endDate": {
                    "type": "string"
                },
                "statusMessage": {
                    "type": "string"
                },
                "statusCode": {
                    "type": "integer",
                    "example": 200
                },
                "status": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "verifySuccessResponse": {
            "properties": {
                "status": {
                    "type": "integer",
                    "example": 1
                },
                "message": {
                    "type": "string"
                },
                "data": {
                    "properties": {
                        "message": {
                            "type": "string"
                        },
                        "data": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/verifySubject"
                            }
                        }
                    }
                }
            }
        },
        "requestBody": {
            "type": "object",
            "properties": {
                "page": {
                    "type": "integer",
                    "example": 1
                },
                "limit": {
                    "type": "integer",
                    "example": 10
                },
                "status": {
                    "type": "integer"
                },
                "lastWeek": {
                    "type": "boolean"
                },
                "lastMonth": {
                    "type": "boolean"
                },
                "startDate": {
                    "type": "string"
                },
                "endDate": {
                    "type": "string"
                },
                "searchValue": {
                    "type": "string"
                },
                "sortKey": {
                    "type": "string"
                },
                "sortValue": {
                    "type": "string"
                }
            }
        },
        "requestResponse": {
            "type": "object",
            "properties": {
                "requestID": {
                    "type": "string"
                },
                "subjectName": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string"
                },
                "statusMessage": {
                    "type": "string"
                },
                "statusCode": {
                    "type": "integer",
                    "example": 200
                },
                "status": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "requestResponseList": {
            "properties": {
                "status": {
                    "type": "integer",
                    "example": 1
                },
                "message": {
                    "type": "string"
                },
                "data": {
                    "properties": {
                        "data": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/requestResponse"
                            }
                        }
                    }
                }
            }
        }
    }
}